html
    head
        title= title
        link(rel='stylesheet', href='/css/style.css')
        style.
            div {
                padding: 10px;
            }
            div span {
                padding-right: 5px;
            }

block content
    form(method='post' action='/authserver/register')
        h1=subTitle
        div
            span=username
            input(type='text' name='username')
        div
            span=password
            input(type='password' name='password')
        div
            span=email
            input(type='email', name='email')
        div
            input(type='submit', value='#{submit}')
